<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp">

    <EditText
            style="@style/CustomText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_vertical_margin"
            android:inputType="number"
            android:digits="1234567890"
            android:maxLength="5"
            android:ems="10"
            android:id="@+id/inputE"
            android:text="@string/startChar"
            android:gravity="center_horizontal"
            />

    <!--TODO may be use search character http://www.fileformat.info/info/unicode/char/1f50d/index.htm-->
    <Button
            android:background="@drawable/red_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_vertical_margin"
            android:text="Search"
            android:gravity="center_horizontal"
            android:id="@+id/button"
            style="@style/button_text"/>
    <TextView
            style="@style/CustomText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/detail_vertical_margin"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/outputE"/>
</LinearLayout>

