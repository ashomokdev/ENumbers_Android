<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomText" parent="@android:style/Theme.Holo">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#008</item>
    </style>



    <style name="EName">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black85</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EPurpose">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black85</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ECode">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="about" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#01579B</item>
        <item name="android:textSize">10sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Widget.MyApp.Toolbar.Solid" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="ECode_Big">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black85</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Label">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">@dimen/label_vertical_margin</item>
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="BasicText" parent="EName"></style>

    <style name="BasicTextSmaller" parent="EName">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextForFlags" parent="EName">
        <item name="android:textSize">14sp</item>
    </style>



</resources>