<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_fragment_frame_layout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/viewInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputE"
            style="@style/CustomText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_weight="1"
            android:background="@drawable/apptheme_textfield_default_holo_light"
            android:imeOptions="actionDone"
            android:maxLength="30"
            android:singleLine="true"
            android:text="@string/startChar"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursorcolor"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/ic_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_margin"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/icon_padding"
            android:paddingStart="@dimen/icon_padding"
            android:paddingTop="@dimen/icon_padding"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_clear_36dp" />

        <ImageButton
            android:id="@+id/ic_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_margin"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/icon_padding"
            android:paddingStart="@dimen/icon_padding"
            android:paddingTop="@dimen/icon_padding"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mic_36dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/data_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/viewInput"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin">

        <ListView
            android:id="@+id/ENumberList"
            style="@style/CustomText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/detail_vertical_margin"
            android:clickable="false"
            android:cursorVisible="false"
            android:dividerHeight="1dp"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <TextView
            android:id="@+id/warning"
            style="@style/CustomText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/detail_vertical_margin"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/notFoundMessage" />
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/keyboard"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:padding="@dimen/icon_padding"
        android:src="@drawable/ic_camera_alt_36dp" />


    <include layout="@layout/keyboard" />
</RelativeLayout>

