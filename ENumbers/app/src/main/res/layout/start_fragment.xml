<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/start_fragment_frame_layout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:background="@color/blue"
        android:id="@+id/viewInput">

        <EditText
            android:id="@+id/inputE"
            style="@style/CustomText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/apptheme_textfield_default_holo_light"
            android:digits="1234567890abcdefghijklmnopqrstuvwxyz,"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="15"
            android:singleLine="true"
            android:text="@string/startChar"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursorcolor"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/layout_margin"/>

        <ImageButton
            android:id="@+id/ic_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingTop="@dimen/icon_padding"
            android:background="@null"
            android:gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_clear_36dp" />

        <ImageButton
            android:id="@+id/ic_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/icon_padding"
            android:background="@null"
            android:gravity="center_vertical"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mic_36dp"
            android:layout_marginEnd="@dimen/layout_margin"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:visibility="invisible"
        android:id="@+id/progressBarLayout">
        <TextView
            style="@style/CustomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ocrRecognition" />
        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            />
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/data_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/viewInput"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin">

        <ListView
            android:id="@+id/ENumberList"
            style="@style/CustomText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/detail_vertical_margin"
            android:clickable="false"
            android:cursorVisible="false"
            android:dividerHeight="1dp"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <TextView
            android:id="@+id/warning"
            style="@style/CustomText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/detail_vertical_margin"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/notFoundMessage" />
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_camera_alt_36dp" />
</RelativeLayout>










































